#!/usr/bin/env bash

gotoJSProj () {
  echo "Which Project: "
  touch ~/WebstormProjects/quit.txt
  select DIRECTORY in ~/WebstormProjects/*;
  do
      case ${DIRECTORY} in
            *)
              if [[ "$DIRECTORY" == *quit.txt** ]]; then
                echo "Exiting"
              else
                echo "You picked $DIRECTORY ($REPLY)"
                cd ${DIRECTORY}
              fi
              break
              ;;
      esac
   done
   rm ~/WebstormProjects/quit.txt
}

jsDepsUpdate () {
   ncu -u && yarn install
}

jsDepInstall () {
   yarn add "$@"
}

dryRunPublishJS () {
  npm publish --dry-run
}

publishProjectJS () {
  npm publish
}

avaFailFast () {
  node ./node_modules/.bin/ava -v --fail-fast "$@"
}

avaSerialFailFast () {
  node ./node_modules/.bin/ava -v --fail-fast --serial "$@"
}

jsFormatPrettierStandard () {
  node ./node_modules/.bin/prettier-standard "$@"
}

jsFormatPrettier () {
  node ./node_modules/.bin/prettier --write "$@"
}


